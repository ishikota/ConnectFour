<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <corners android:radius="3dp"/>
            <gradient
                android:angle="90"
                android:endColor="#606060"
                android:startColor="#323232" />
        </shape>
    </item>

    <item
        android:drawable="@drawable/move_yellow"
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"/>

    <item
        android:drawable="@drawable/move_red"
        android:top="20dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"/>

</layer-list>