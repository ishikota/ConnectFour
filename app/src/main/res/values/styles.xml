<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/cyan</item>
        <item name="android:backgroundStacked">@color/cyan</item>
        <!--<item name="android:backgroundSplit">@color/red</item>-->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:icon">@drawable/app_icon_no_back</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="column">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>
    <style name="blank">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/move_blank</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/move_red</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="yellow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/move_yellow</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="test1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/move_test1</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="test2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/move_test2</item>
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>
